---
import Layout from '../layouts/Layout.astro';
import StatusBadge from '../components/StatusBadge.astro';
import SocialLinks from '../components/SocialLinks.astro';
---

<Layout title="Vulktech - Ship Your Idea ðŸš€">
  <section class="min-h-screen flex items-center justify-center relative z-10">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <img
        src="https://res.cloudinary.com/vulk-tech/image/upload/q_auto,f_auto,b_auto,c_pad,h_400,w_400/isologo/png/color"
        alt="Vulktech"
        class="h-20 md:h-28 mx-auto mb-8 animate-in-scale"
      />

      <div class="mb-10 animate-in delay-1">
        <StatusBadge />
      </div>

      <h1 class="font-display text-5xl md:text-7xl lg:text-8xl font-extrabold tracking-tight mb-8 animate-in delay-2">
        Ship your idea<span class="gradient-text">.</span>
      </h1>

      <p class="text-lg md:text-xl text-vulk-muted max-w-xl mx-auto mb-12 leading-relaxed animate-in delay-3">
        Move fast, ship faster. No endless roadmaps â€” just real products, shipped.
      </p>

      <a
        href="mailto:hello@vulktech.com"
        class="group relative bg-vulk-blue px-10 py-4 rounded-full font-semibold text-base transition-all duration-300 hover:scale-105 inline-flex items-center gap-3 glow-border overflow-hidden animate-in delay-4"
      >
        <span class="relative z-10">Let's Ship</span>
        <svg class="w-4 h-4 relative z-10 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
        <span class="absolute inset-0 bg-gradient-to-r from-vulk-blue to-vulk-cyan opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
      </a>

      <p class="text-sm text-vulk-graphite mt-8 animate-in-fade delay-5">More coming soon</p>

      <div class="mt-16 animate-in delay-6">
        <SocialLinks />
      </div>
    </div>
  </section>
</Layout>
